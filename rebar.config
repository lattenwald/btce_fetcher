%% -*- erlang -*-
{erl_opts, [debug_info]}.
{deps,
 [{jiffy, {git, "https://github.com/davisp/jiffy.git"}}]}.

%% https://github.com/davisp/jiffy/pull/118#issuecomment-202677295
{overrides,
 [{override, jiffy,
   [{plugins, [pc]},
    {artifacts, ["priv/jiffy.so"]},
    {provider_hooks,
     [{post,
       [{compile, {pc, compile}},
        {clean, {pc, clean}}]}]
    }]
  }]
}.
